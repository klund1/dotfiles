[credential]
	helper = cache
[alias]
  re = rebase @{u}
  rei = rebase -i @{u}
  rec = rebase --continue
  rea = rebase --abort
  vdiff = "!f() { nvim -p `git diff --name-only $@` -c \"tabdo Gvdiffsplit $@\"; }; f"
  vmerge = "!f() { nvim -p `git diff --name-only --diff-filter=U $@` -c \"tabdo Gvdiffsplit! $@\"; }; f"
  review = "!f() { git vdiff `git merge-base HEAD feature/juno`; }; f"
[core]
	pager = less -F -X
	excludesfile = $HOME/.gitignore
